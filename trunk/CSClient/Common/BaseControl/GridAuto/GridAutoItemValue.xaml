<UserControl x:Class="BaseControl.GridAuto.GridAutoItemValue"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Border  BorderBrush="#94ADCC" BorderThickness="1,0,0,1" Margin="0,0,0,0" UseLayoutRounding="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
        <TextBox x:Name="txtValue" Text="" AcceptsReturn="True" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="{x:Null}" BorderThickness="0,0,0,0"  HorizontalAlignment="Stretch" TextWrapping="Wrap"     VerticalAlignment="Stretch" FontSize="30"></TextBox>
    </Border>
</UserControl>
